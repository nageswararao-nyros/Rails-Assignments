<div class="jumbotron">
  <div align="center">
    <div class="form-align">
      <div align="left" class="formHeader-align">
        <h3  class="btn btn-info btn-sm"><b>Login</b></h3>
      </div>
    </div>
    <div class="form-align">
      <% flash.each do |type, message| %>
        <div class="message notice">
          <p>
            <%= message %>
          </p>
        </div>
      <% end %>
      <div class="formContent-align">
          <%= form_tag do %>
          <div class="form-group">
            <div align="left"><%= label_tag :name, 'Name:'%></div>
             <%= text_field_tag :name, params[:name],:class=>"form-control",:placeholder=>"Username" %>
          </div>

          <div class="form-group"> 
            <div align="left"><%= label_tag :password, 'Password:',:class=>"label_style input_styles" %></div>
           <%= password_field_tag :password, params[:password],:class=>"form-control",:placeholder=>"Password" %>
          </div>
          
            <div>
              <%= submit_tag "Login",:class=>"btn btn-success form-control"%>
            </div>
            <% end %>
            <div class="form-group"><br>
               Are you a new user? <a href="users/new">Signup</a>
            </div>
           
          </div>
        </div>
      </div>
    </div>
  </div>
</div>