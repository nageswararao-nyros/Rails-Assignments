<table class="table table-bordered table-sm">
  <tr>
    <th>
      Author Name
    </th>
    <th>
      Author Nationality
    </th>
  </tr>
  <%= @authors_nationalities_not.find_each do |author| %>
    <tr>
      <td>
        <%= author.name %>  
      </td>
      <td>
        <%= author.nationality%>
      </td>
    </tr>
  <% end %> 
</table>
<h1>Using or</h1>
<table class="table table-bordered table-sm">
  <tr>
    <th>
      Author Name
    </th>
    <th>
      Author Nationality
    </th>
  </tr>
  <%= @authors_nationalities_or.find_each do |author| %>
    <tr>
      <td>
        <%= author.title %>  
      </td>
