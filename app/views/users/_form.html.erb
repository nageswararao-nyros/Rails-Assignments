<div class="jumbotron">
  <div align="center">
    <div class="form-align">
      <div align="left" class="formHeader-align">
        <h3  class="btn btn-info btn-sm"><b>New User</b></h3>
      </div>
    </div>
      <div class="form-align">
        <div class="formContent-align">

          <%= form_with model:@user, local: true do |form| %>

          <div class="form-group">
            <div align="left"><%= form.label :name %></div>
            <%= form.text_field :name,:class=>"form-control",:placeholder=>"Username" %>
            <div align="left" class="text-danger"><%= form.label @user.errors.messages[:name].first if @user.errors.messages[:name].any? %>    
            </div>
          </div>

          <div class="form-group">
            <div align="left"><%= form.label :email %></div>
            <%= form.text_field :email,:class=>"form-control",:placeholder=>"Email" %>
            <div align="left" class="text-danger"><%= form.label @user.errors.messages[:email].first if @user.errors.messages[:email].any? %>    
            </div>
          </div>

          <div class="form-group"> 
            <div align="left"><%= form.label :password %></div>
            <%= form.password_field :password,:class=>"form-control",:placeholder=>"Password" %>
          </div>
          
          <div class="form-group">
            <div align="left"><%= form.label :password_confirmation %></div>
            <%= form.password_field :password_confirmation,:class=>"form-control",:placeholder=>"Confirm Password" %>
          </div>

         <div>
              <%= form.submit "SignUp",:class=>"btn btn-success form-control"%>
            </div>
            <div class="form-group"><br>
               Are you having an account? <%= link_to 'Signin', sessions_create_path %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>