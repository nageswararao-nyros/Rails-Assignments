
<div class="jumbotron">
  <div align="center">
    <div class="form-align">
      <div align="left" class="formHeader-align">
        <h3  class="btn btn-info"><b>New article</b></h3>
      </div>
    </div>
    <div class="form-align">
      <div class="formContent-align">
        <%= form_with model: @article, local: true do |form| %>
        <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="form-group">
          <div align="left"><%= form.label :title %></div>
          <%= form.text_field :title , {:class=>"form-control"} %>
        </div>
        <div class="form-group">
          <div align="left"><%= form.label :authorname %></div>
          <%= form.text_field :authorname , {:class=>"form-control"}  %>
        </div>
        <div class="form-group">
          <div align="left"><%= form.label :story %></div>
          <%= form.text_area :story , {:class=>"form-control"}%>
        </div>
        <div class="form-group">
          <div align="left"><%= form.label :category %></div>
          <%= form.select :category, [["Devotional","Devotional"], ["Historical","Historical"], ["Adventure","Adventure"], ["Kids","Kids"], ["Funny","Funny"], ["Sports","Sports"], ["Love","Love"], ["Singing","Singing"], ["Dancing","Dancing"]], { prompt: "Select..." }, { class: "form-control", required: true } %>
        </div>
        <div class="form-group">
          <div align="left"><%= form.label :poster %></div>
          <%= form.file_field :image, {:class=>"form-control"}%>
        </div>

        <div class="form-group">
          <div align="left">
          <%= form.check_box :check%><-If you want to publish your story accept this!!!</div>
        </div>

        <div class="row">
          <div align="left" class="col-6">
            <%= link_to 'Back', articles_path, {:class=>"btn btn-warning"} %>
          </div>
          <div align="right" class="col-6">
            <%= form.submit :save,{:class=>"btn btn-success"} %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>